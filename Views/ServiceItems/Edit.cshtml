@using static Work.Domain.Entities.ServiceItemIn

@model ServiceItemIn
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}



<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-controller="ServiceItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Category"></label>
                <input asp-for="Category" />
                <span asp-validation-for="Category"></span>
            </div>
            <div class="div-box">
                <label asp-for="Sum"></label>
                <input asp-for="Sum" />
                <span asp-validation-for="Sum"></span>
            </div>
            <div class="div-box">
                <label asp-for="Comment"></label>
                <textarea asp-for="Comment"></textarea>
                <span asp-validation-for="Comment"></span>
            </div>

            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>



